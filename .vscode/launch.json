{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "bashdb",
            "request": "launch",
            "name": "INSTALL",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/setup.sh",
            "args": []
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (type in script name)",
            "cwd": "${workspaceFolder}",
            "program": "${command:AskForScriptName}",
            "args": []
        },
        {
            "name": "CPC INFO",
            "type": "python",
            "request": "launch",
            "module": "CPCReady.main",
            "cwd": "${workspaceFolder}/tools/sdk",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
            },
            "args": ["info"] 
        },
        {
            "name": "CPC BUILD",
            "type": "python",
            "request": "launch",
            "module": "CPCReady.main",
            "cwd": "${workspaceFolder}/tools/sdk/${env:PROJECT_TEST}",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/tools/sdk",
            },
            "args": ["build","--scope", "all"] 
        },
        {
            "name": "CPC PROJECT",
            "type": "python",
            "request": "launch",
            "module": "CPCReady.main",
            "cwd": "${workspaceFolder}/tools/sdk",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
            },
            "args": ["project","--name", "${env:PROJECT_TEST}"] 
        },
        {
            "name": "CPC RUN (WEB)",
            "type": "python",
            "request": "launch",
            "module": "CPCReady.main",
            "cwd": "${workspaceFolder}/tools/sdk/${env:PROJECT_TEST}",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/tools/sdk",
            },
            "args": ["run","--setting", "WEB6128"] 
        },
        {
            "name": "CPC RUN (DESKTOP)",
            "type": "python",
            "request": "launch",
            "module": "CPCReady.main",
            "cwd": "${workspaceFolder}/tools/sdk/${env:PROJECT_TEST}",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/tools/sdk",
            },
            "args": ["run","--setting", "CPC6128"] 
        },
        {
            "name": "CPC RUN (XXXXXX)",
            "type": "python",
            "request": "launch",
            "module": "CPCReady.main",
            "cwd": "${workspaceFolder}/tools/sdk/${env:PROJECT_TEST}",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/tools/sdk",
            },
            "args": ["run","--setting", "XXXXX"] 
        },
        {
            "name": "VERSION",
            "type": "python",
            "request": "launch",
            "module": "CPCReady.main",
            "cwd": "${workspaceFolder}/tools/sdk",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
            },
            "args": ["--version"] 
        },
        {
            "name": "CPC PALETTE",
            "type": "python",
            "request": "launch",
            "module": "CPCReady.main",
            "cwd": "${workspaceFolder}/tools/sdk",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
            },
            "args": ["palette","--image", "/workspaces/installer/tools/sdk/testing000/img/avatar.png","--mode", "0"] 
        },
        {
            "name": "CPC SCREEN",
            "type": "python",
            "request": "launch",
            "module": "CPCReady.main",
            "cwd": "${workspaceFolder}/tools/sdk",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
            },
            "args": ["screen","--image", "/workspaces/installer/tools/sdk/testing000/img/avatar.png","--mode", "0","--out","testing001"] 
        },
        {
            "name": "CPC SCREEN DSK",
            "type": "python",
            "request": "launch",
            "module": "CPCReady.main",
            "cwd": "${workspaceFolder}/tools/sdk",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
            },
            "args": ["screen","--image", "/workspaces/installer/tools/sdk/testing000/img/avatar.png","--mode", "0","--out","testing001","--dsk"] 
        },
        {
            "name": "CPC SPRITE",
            "type": "python",
            "request": "launch",
            "module": "CPCReady.main",
            "cwd": "${workspaceFolder}/tools/sdk",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
            },
            "args": ["sprite","--image", "/workspaces/installer/tools/sdk/testing000/img/avatar.png","--mode", "0","--out","testing001","--height","12", "--width","12"] 
        },
        {
            "name": "CPC UPGRADE",
            "type": "python",
            "request": "launch",
            "module": "CPCReady.main",
            "cwd": "${workspaceFolder}/tools/sdk",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
            },
            "args": ["upgrade"] 
        }
    ]
}